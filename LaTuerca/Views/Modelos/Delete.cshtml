@model LaTuerca.Models.Modelo
@using LaTuerca.Controllers
@{
    EmpresasController empresa = new EmpresasController();
    ViewBag.NombreEmpresa = empresa.getNombreEmpresa();
}

@{
    ViewBag.Title = "Eliminar";
}

@if (TempData["notice"] != null)
{
    <div class="pad margin no-print" id="mensaje">
        <div class="callout callout-success" style="margin-bottom: 0!important;">
            <i class="fa fa-check"></i>   @TempData["notice"]
        </div>
    </div>
}

<div class="pad margin" id="">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="pull-">
            <button type="submit" class="btn btn-primary btn-block btn hidden-lg tip" title="Eliminar">
                <i class="fa fa-times"></i>
            </button>
            <button type="submit" class="btn btn-danger btn btn-block visible-lg tip" title="Eliminar">
                <i class="fa fa-trash"></i> <b>  ¿Está seguro de que desea eliminar permanentemente?</b>
            </button>
        </div>
    }
</div>
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="user-block">
                        <img class="img-circle tip" src="~/Content/img/mundo.jpeg" width="50" title="@ViewBag.NombreEmpresa" alt="@ViewBag.NombreEmpresa">
                        <span class="username text-capitalize text-light-blue text-blue">@ViewBag.NombreEmpresa</span>
                        <span class='description'>@ViewBag.Title</span>

                    </div>
                    <div class='box-tools btn-group'>
                        <a href="@Url.Action("Index", "Modelos")" class="btn btn-link btn-sm hidden-lg tip" title="Ver Modelo">
                            <i class="fa fa-building"></i>
                        </a>
                        <a href="@Url.Action("Index", "Modelos")" id="" class="btn btn-link btn-sm visible-lg tip" title="Ver Modelo">
                            <i class="fa fa-building"></i> <b>Ver Proveedores</b>
                        </a>
                        <a href="@Url.Action("Create", "Modelos")" id="" class="btn btn-link btn-sm hidden-lg tip" title="Nuevo Modelo">
                            <i class="fa fa-plus-sign2"></i>
                        </a>
                        <a href="@Url.Action("Create", "Modelos")" id="" class="btn btn-link btn-sm visible-lg tip" title="Nuevo Modelo">
                            <i class="fa fa-plus-sign2"></i> <b>Nuevo Proveedor</b>
                        </a>
                    </div>
                </div>
                        <div class="box-body">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Marca.Nombre)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Marca.Nombre)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NombreModelo)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NombreModelo)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Estado)
                                </dd>

                            </dl>
                        </div>
                    </div>
                </div>
            </div>
</section>