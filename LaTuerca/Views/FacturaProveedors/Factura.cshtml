@model LaTuerca.Models.FacturaProveedor
@{
    ViewBag.Title = "Factura Compra";
    
    IFormatProvider formatProvider = new System.Globalization.CultureInfo("es-PY");
}
<section class="content-header">
    <h1><i class="en-credit-card"></i>  @ViewBag.Title <small></small> </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Factura</a></li>
        <li class="active">Compra</li>
    </ol>
</section>
@if (TempData["notice"] != null)
{
    <div class="pad margin no-print" id="mensaje">
        <div class="callout callout-success" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Alerta:</h4>
            @TempData["notice"]
        </div>
    </div>
}
<!-- Main content -->
<section class="invoice">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <!-- title row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <div class="user-block">
                        <img class="img-circle" src="~/Content/img/mundo.jpeg" width="30" title="Mundo Tuerca" alt="Mundo Tuerca">
                        <span class="username"><a href="#">Mundo Tuerca, Inc</a></span>
                        <span class="description">Encarnación, Itapúa</span>
                    </div>
                </div>
            </div>
            <!-- /.col -->
        </div>
    <!-- info row -->
        <div class="row invoice-info">
            <div class="col-lg-4 invoice-col">
                <center class="text-lg-center">
                    <strong>Mundo Tuerca, Inc.</strong><br>
                    <small class="description">Mcal. Estigarribia c/ Artigas, Zona Alta</small><br />
                    <small class="description">Encarnación, Itapúa</small><br />
                    <small class="description">Telefono: (071) 243-345</small><br />
                    <small class="description">Email: info@mundotuerca.com</small>
                </center>
            </div>
            <!-- /.col -->
            <div class="col-lg-4 invoice-col">
                <div class="row  form-horizontal">
                    <div class="col-lg-12">
                        <div class=" form-group">
                            <label class="col-lg-3">Proveedor:</label>
                            <div class="col-lg-9">
                                <input type="text" name="RazonSocial" class="RazonSocial" id="RazonSocial" placeholder="RazonSocial" autofocus />
                                <input type="hidden" name="ProveedorId" class="ProveedorId" id="ProveedorId" placeholder="ProveedorId"  />
                                @Html.ValidationMessageFor(model => model.ProveedorId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class=" form-group">
                            <label class="col-lg-3">R.U.C.:</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control input-sm Ruc" placeholder="RUC" id="Ruc" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class=" form-group">
                            <label class="col-lg-3">Direccion:</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control input-sm Direccion" placeholder="Direccion" id="Direccion" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-lg-4 invoice-col">
                <div class="row  form-horizontal">
                    <div class="col-lg-12">
                        <div class="form-group input-daterange" data-provide="datepicker">
                            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control input-sm", @id = "fechacompra", placeholder = "Fecha", @required = "true", aria_required = "true" } })
                                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumeroFactura, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.NumeroFactura, new { htmlAttributes = new { @class = "form-control input-sm text-danger", placeholder = "Nº de Factura", @required = "true", aria_required = "true" } })
                                @Html.ValidationMessageFor(model => model.NumeroFactura, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Total, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = "Total", @required = "true", aria_required = "true", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- /.row -->
    <!-- Table row -->
        <div class="row">
            <div class="col-lg-12 ">
                <table class="table table-responsive table-striped table-condensed" id="">
                    <thead></thead>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                <a href="#" id="addRowBtn" class="btn btn-primary btn-sm"><i class="im-cart3"></i> Agregar</a>
                                <a href="" type="reset" id="" class="btn btn-danger btn-sm">
                                    <i class="im-reply"></i> Cancelar
                                </a>
                                <button id="saveInvoiceBtn" class="btn btn-success btn-sm" type="submit" name="saveInvoice" value="Guardar"> <i class="fa fa-ok-sign"></i> Guardar</button>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    <!-- /.row -->
    <!-- Table row -->
        <div class="row">
            <div class="col-lg-12 table-responsive">
                <table class="table table-striped table-condensed table-hover table-inverse tabledata" id="itemsTable">
                    <thead>
                        <tr class="bg-primary">
                            <th class="col-lg-1"><i class="im-remove"></i></th>
                            <th class="col-lg-2">Item</th>
                            <th class="col-lg-3">Description</th>
                            <th class="col-lg-2">Cantidad</th>
                            <th class="col-lg-2">Precio Unit.</th>
                            <th class="col-lg-2">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="item-row">
                            <td><i class="im-radio-checked"></i></td>
                            <td>
                                <input type="number" name="CompraDetalles.[0].RepuestoId" value="" placeholder="Cod.: Repuesto" autofocus class="form-control input-sm" id="RepuestoId" tabindex="1" />
                            </td>
                            <td>
                                <input type="text" name="CompraDetalles.[0].Nombre" value="" class="form-control input-sm" placeholder="Descripcion" id="Nombre" readonly="readonly" />
                            </td>
                            <td>
                                <input type="number" name="CompraDetalles.[0].Cantidad" value="1" min="1" max="100" class="form-control input-sm" id="Cantidad" placeholder="Cantidad" tabindex="2" required />
                            </td>
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon">Gs. </span><input name="CompraDetalles.[0].Precio" class="form-control input-sm" placeholder="Precio" id="PrecioVenta1" type="text">
                                </div>
                            </td>
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon">Gs. </span><input name="CompraDetalles.[0].Total" class="form-control input-sm" id="TotalLinea" placeholder="Total" type="text" readonly="readonly">
                                </div>
                            </td>
                        </tr>
                    </tbody>

                    <tbody>
                        @if (Model != null && Model.DetallesFacturaProveedores != null && Model.DetallesFacturaProveedores.Count > 0)
                        {
                            var i = 0;
                            foreach (var item in Model.DetallesFacturaProveedores)
                            {
                                <tr>
                                    <td>@Html.TextBox("CompraDetalles[" + i + "].RepuestoId", item.RepuestoId)</td>
                                    <td>@Html.TextBox("CompraDetalles[" + i + "].Precio", item.Precio)</td>
                                    <td>@Html.TextBox("CompraDetalles[" + i + "].Cantidad", item.Cantidad)</td>
                                    <td>@Html.TextBox("CompraDetalles[" + i + "].Precio", item.Precio)</td>


                                    <td><button type="submit" name="operacion" value="eliminar-detalle-@i">Eliminar</button></td>
                                    <td><button type="reset" name="operacion" value="reset-detalle-@i">Cancela</button></td>

                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
                <!-- /.row -->
                <div class="row">
                    <!-- accepted payments column -->
                    <div class="col-lg-8">
                    </div>
                    <!-- /.col -->
                    <div class="col-lg-4">
                        <div class="">
                            <table class="table table-responsive table-hover table-inverse table-striped">
                                <tr>
                                    <th class="text-right col-lg-6">Subtotal:</th>
                                    <td id="subTotal" class=" col-lg-6 text-right">Gs. </td>
                                </tr>
                                <tr>
                                    <th>
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-10">
                                            <div class="input-group">
                                                <input placeholder="IVA" type="text" name="tax" id="tax" value="10" class="form-control input-sm text-right" />
                                                <span class="input-group-addon">%</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td id="salesTax" class="text-xs-center text-right">Gs.</td>
                                </tr>
                                <tr>
                                    <th class ="text-right">Total:</th>
                                    <td id="grandTotal" class="text-xs-center text-right">Gs. </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- this row will not appear when printing -->
                <div class="row no-print">
                    <div class="col-xs-12">
                        <a href="" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Imprimir</a>
                        <button class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Realizar pago</button>
                        <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generar PDF</button>
                    </div>
                </div>
                }
    </section>
<!-- /.content -->
<div class="clearfix"></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script></script>
}