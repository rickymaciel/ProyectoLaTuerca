@model LaTuerca.ViewModels.RepuestoViewModel


@{
    ViewBag.Title = "Crear nuevo repuesto";
}


<section class="content-header">
    <h1>
        <i class="im-menu"></i> @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"> <i class="im-menu"></i> @ViewBag.Title</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="col-lg-12" id="mensaje">
                <div class="callout callout-success">
                    @Html.ValidationSummary()
                </div>
            </div>
        }
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <span class="btn-group">
                            <a href="@Url.Action("Index", "Repuestos")" class="btn btn-primary">
                                <i class="im-menu"></i> Ver todo
                            </a>
                        </span>
                    </h3>
                    <div class="box-tools pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <i class="im-cogs"></i> Crear Nuevo
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="" class="" data-toggle="modal" data-target="#crearModelo">
                                        <i class="im-plus"></i> Nuevo Modelo
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="" data-toggle="modal" data-target="#crearMarca">
                                        <i class="im-plus"></i> Nuevo Marca
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="" data-toggle="modal" data-target="#crearCategoria">
                                        <i class="im-plus"></i> Nuevo Categoria
                                    </a>
                                </li>
                                <li>
                                    <a href="" class="" data-toggle="modal" data-target="#crearProveedor">
                                        <i class="im-plus"></i> Nuevo Proveedor
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <form role="form" class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group col-lg-12" id="div-nombre">
                                @Html.LabelFor(model => model.Repuesto.Nombre, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "nombre", placeholder = "Nombre del producto", @required="true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.Nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3" id="div-select-marca">
                                <a href="@Url.Action("Index", "Marcas")">
                                    @Html.LabelFor(model => model.Repuesto.Marca, htmlAttributes: new { @class = "control-label" })
                                </a>
                                @Html.DropDownList("Marca", new SelectList(Model.Marcas, "Id", "Nombre"), "Seleccione una marca", new { @id = "select-marca", @class = "demo-animals", placeholder = "Seleccione una Marca", style = "width: 100%;", @required = "true" })
                                @Html.ValidationMessageFor(model => model.Modelos, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3" id="div-select-modelo">
                                <a href="@Url.Action("Index", "Modelos")">
                                    @Html.LabelFor(model => model.Repuesto.Modelo, htmlAttributes: new { @class = "control-label" })
                                </a>
                                @Html.DropDownList("Modelo", new SelectList(Model.Modelos, "Id", "NombreModelo"), "Seleccione un modelo", new { @id = "select-modelo", @class = "demo-animals", placeholder = "Seleccione un Modelo", style = "width: 100%;", @required = "true" })
                                @Html.ValidationMessageFor(model => model.Modelos, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3" id="div-select-categoria">
                                <a href="@Url.Action("Index", "Categorias")">
                                    @Html.LabelFor(model => model.Repuesto.Categoria, htmlAttributes: new { @class = "control-label" })
                                </a>
                                @Html.DropDownList("Categoria", new SelectList(Model.Categorias, "Id", "Nombre"), "Seleccione una Categoria", new { @id = "select-categoria", @class = "demo-animals", placeholder = "Seleccione una Categoria", style = "width: 100%;", @required = "true" })
                                @Html.ValidationMessageFor(model => model.Categorias, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3" id="div-select-proveedor">
                                <a href="@Url.Action("Index", "Proveedores")">
                                    @Html.LabelFor(model => model.Repuesto.Proveedor, htmlAttributes: new { @class = "control-label" })
                                </a>
                                @Html.DropDownList("Proveedor", new SelectList(Model.Proveedores, "Id", "RazonSocial"), "Seleccione un Proveedor", new { @id = "select-proveedor", @class = "demo-animals", placeholder = "Seleccione un Proveedor", style = "width: 100%;", @required = "true" })
                                @Html.ValidationMessageFor(model => model.Proveedores, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.Stock, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.Stock, new { htmlAttributes = new { @class = "form-control", @id = "stock", placeholder = "Stock", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.Stock, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.StockMinimo, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.StockMinimo, new { htmlAttributes = new { @class = "form-control", @id = "stockminimo", placeholder = "Stock mínimo", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.StockMinimo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.StockMaximo, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.StockMaximo, new { htmlAttributes = new { @class = "form-control", @id = "stockmaximo", placeholder = "Stock máximo", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.StockMaximo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.PrecioCosto, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.PrecioCosto, new { htmlAttributes = new { @class = "form-control", placeholder = "Precio de coste", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.PrecioCosto, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.PrecioVenta1, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.PrecioVenta1, new { htmlAttributes = new { @class = "form-control", @id = "precioventa1", placeholder = "Precio de venta 1", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.PrecioVenta1, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.PrecioVenta2, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.PrecioVenta2, new { htmlAttributes = new { @class = "form-control", @id = "precioventa2", placeholder = "Precio de venta2", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.PrecioVenta2, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-3">
                                @Html.LabelFor(model => model.Repuesto.PrecioVenta3, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Repuesto.PrecioVenta3, new { htmlAttributes = new { @class = "form-control", @id = "precioventa3", placeholder = "Precio de venta3", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.Repuesto.PrecioVenta3, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="pull-right">
                                <button id="guardar" type="submit" class="btn btn-social btn-success">
                                    <i class="im-checkbox-checked"></i> Guardar
                                </button>
                            </div>
                            <button type="reset" class="btn btn-social btn-default">
                                <i class="im-remove"></i> Cancelar
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</section>
@Html.Partial("_create_marca", Model.Marca)
@Html.Partial("_create_modelo", Model.Modelo)
@Html.Partial("_create_categoria", Model.Categoria)
@Html.Partial("_create_proveedor", Model.Proveedor)
