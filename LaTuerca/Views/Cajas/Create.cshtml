    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
            $(function () {

                $('#abrir').datetimepicker({
                    icons: {
                        time: "fa fa-clock-o",
                        date: "fa fa-calendar",
                        up: "fa fa-arrow-up",
                        down: "fa fa-arrow-down"
                    },
                    locale: 'es',
                    format: 'YYYY-MM-DD hh:mm:ss'
                });
                $('#datetimepicker2').datetimepicker();
                $("#Usuario").val('@NewNick');
                $("#Usuario").attr('readonly', true);

                $("#UsuarioModal").val('@NewNick');
